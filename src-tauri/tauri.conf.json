{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "freemind",
    "version": "0.0.0"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUxNTc0QjA2NjY2RTE5MwpSV1NUNFdabXNIUVZCUnlkOTl5T3ZyeDVrTE0wQVNWTzJLMXdET3ppZi9nNDFnN1oxLzQ5TzEzUAo=",
      "endpoints": [
        "https://github.com/tanayseven/freemind/releases/latest/download/latest.json"
      ]
    }
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$HOME/Library/Application Support/**/*"
        ]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "Free Mind",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-eval' 'unsafe-inline' data: tauri:"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "tech.tanay.freemind",
      "category": "Productivity",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": [],
        "files": {
          "usr/share/polkit-1/actions/tech.tanay.freemind.policy": "src-tauri/assets/tech.tanay.freemind.policy"
        }
      },
      "macOS": {
        "exceptionDomain": "",
        "providerShortName": null,
        "signingIdentity": null,
        "frameworks": [],
        "minimumSystemVersion": "",
        "license": null,
        "entitlements": "src-tauri/assets/entitlements.plist"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "en-US",
          "template": "src-tauri/assets/main.wxs"
        }
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
